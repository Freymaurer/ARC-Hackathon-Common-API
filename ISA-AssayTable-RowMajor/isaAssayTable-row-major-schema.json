{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "isaAssayTable-row-major-schema",
  "title": "ISA Assay Table Representation Row Major",
  "description": "Represent ISA-XLSX workbook (row-major) in json format.",
  "type": "object",
  "properties": {
    "workbook": {
      "type": "object",
      "properties": {
        "name": "string",
        "worksheets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": "string",
              "rows": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "input": "string",
                    "output": "string",
                    "namedValues": {
                      "type": "array",
                      "items": {
                        "$ref": "#/$defs/namedValue"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "$defs": {
    "namedValue": {
      "anyOf": [
        { "$ref": "https://raw.githubusercontent.com/ISA-tools/isa-specs/master/source/_static/isajson/process_parameter_value_schema.json" },
        { "$ref": "https://raw.githubusercontent.com/ISA-tools/isa-specs/master/source/_static/isajson/material_attribute_value_schema.json" },
        { "$ref": "https://raw.githubusercontent.com/ISA-tools/isa-specs/master/source/_static/isajson/factor_value_schema.json" }
      ]
    }
  }
}